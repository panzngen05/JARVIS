clear
bash $HOME/JARVIS/logo2.sh
play -q $HOME/JARVIS/sound/hello.mp3 &>/dev/null
play -q $HOME/JARVIS/sound/robot.mp3 &>/dev/null
play -q $HOME/JARVIS/sound/klik.mp3 &>/dev/null
$e $k "========================================="
$e $bl " 1. Bot Direktori ðŸ‘‡$m"
 cat  $HOME/bot1.sh
